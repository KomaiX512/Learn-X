{
  "name": "backend",
  "version": "0.1.0",
  "type": "commonjs",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:animations": "ts-node test-animation-system.ts",
    "test:pipeline": "ts-node test-complete-animation-pipeline.ts",
    "test:brutal": "ts-node test-production-brutal-honest.ts",
    "test:quality": "ts-node test-unit-quality-deep-dive.ts",
    "test:verify": "ts-node test-quick-verify.ts",
    "test:e2e": "ts-node test-production-complete-e2e.ts",
    "test:narration:logic": "ts-node src/tests/narration-logic-test.ts",
    "test:narration:unit": "ts-node src/tests/narration-unit-test.ts",
    "test:narration:integration": "ts-node src/tests/narration-integration-test.ts",
    "test:narration:all": "npm run test:narration:logic && npm run test:narration:unit && npm run test:narration:integration",
    "test:tts": "ts-node src/tests/tts-test.ts",
    "test:tts:sync": "ts-node src/tests/tts-synchronization-test.ts",
    "test:tts:e2e": "ts-node src/tests/tts-e2e-test.ts",
    "test:tts:all": "npm run test:tts && npm run test:tts:sync && npm run test:tts:e2e"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^5.8.1",
    "@google/generative-ai": "^0.15.0",
    "bullmq": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.0",
    "ioredis": "^5.4.1",
    "langchain": "^0.3.0",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "vm2": "^3.9.18",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
